{
  "plugins": [
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-mixup"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
			"declarations"
		],
		"order/properties-order": [
      "display",
      "position",
      "float",
      "clear",
      "visibility",
      "overflow",
      "width",
      "height",
      "margin",
      "padding",
      "border",
      "background",
      "color",
      "font",
      "text-decoration",
      "text-align ",
      "vertical-align",
      "white- space",
      "break-word"
		]
  }
}
